.ts-task-representation(
  ng-class="backgroundColor"
  ng-hide="isEdit"
)
  .row(ng-hide="task.is_active")
    .col-md-2
      span.label.label-warning Inactive
    .col-md-10
      .text-center
        h4 {{ task.train }} {{ task.departure_point }} - {{ task.destination_point }}
  .row(ng-show="task.is_active && task.is_successful")
    .col-md-2
      span.label.label-success Found
    .col-md-10
      .text-center
        h4 {{ task.train }} {{ task.departure_point }} - {{ task.destination_point }}
  .row(ng-show="task.is_active && !task.is_successful")
    .col-md-12
      .text-center
        h4 {{ task.train }} {{ task.departure_point }} - {{ task.destination_point }}

  .row
    .col-md-12
      .text-center {{ task.departure_date | date:'fullDate' }}
  .row.ts-task-labels
    .col-md-6
      .text-center
        span.label.label-default {{ task.car | tsCar }}
    .col-md-6
      .text-center
        span.label.label-primary {{ task.seat | tsSeat }}
  .row
    .col-md-12.col-xs-12
      .text-center.ts-task-buttons
        .btn-group(role="group")
          button.btn.btn-default(
            type="button"
            ng-click="tsTaskEdit()"
          )
            span.glyphicon.glyphicon-pencil.ts-glyphicon
            | Edit
          button.btn.btn-default(
            type="button"
            ng-click="tsTaskDisable()"
            ng-show="task.is_active"
          )
            span.glyphicon.glyphicon-pause.ts-glyphicon
            | Disable
          button.btn.btn-default(
            type="button"
            ng-click="tsTaskEnable()"
            ng-hide="task.is_active"
          )
            span.glyphicon.glyphicon-play.ts-glyphicon
            | Enable
          button.btn.btn-danger(
            type="button"
            ng-click="tsTaskDelete()"
          )
            span.glyphicon.glyphicon-remove.ts-glyphicon
            | Delete
.ts-task-representation-edit(
  ng-show="isEdit"
)
  .row.departure-date
    .col-md-12
      .input-group
        input.form-control(
          type="text"
          datepicker-popup="dd.MM.yyyy"
          datepicker-options="dateOptions"
          min-date="minDate"
          ng-model="dt" 
          is-open="opened"
          ng-required="true"
          close-text="Close"
          placeholder="Departure date"
        )
        span.input-group-btn
          button.btn.btn-default(
            type="button"
            ng-click="toggleDatepicker($event)"
          )
            i.glyphicon.glyphicon-calendar
  .row.train
    .col-md-12
      input.form-control(
        type="text" 
        placeholder="Train"
        ng-disabled="!dt"
      )
  .row.departure-city
    .col-md-12
      input.form-control(
        type="text" 
        placeholder="Departure city"
        ng-disabled="!dt"
      )
  .row.destination-city
    .col-md-12
      input.form-control(
        type="text" 
        placeholder="Destination city"
        ng-disabled="!dt"
      )
  .row.car
    .col-md-12
      select.form-control(ng-disabled="!dt")
        option Any type of car
        option VIP car
        option Sleeping car
        option Compartment car
        option Reserved-berths car
        option Car with regular seats
        option Third-class car
  .row.seat
    .col-md-12
      select.form-control(ng-disabled="!dt")
        option Any type of seat
        option Bottom place
        option Top place
        option Bottom place by side
        option Top place by side
  .row.actions
    .col-md-6
      .text-center
        button.btn.btn-default(ng-click="cancelEditing()") Cancel
    .col-md-6
      .text-center
        button.btn.btn-primary(ng-click="saveEditing()") Save
