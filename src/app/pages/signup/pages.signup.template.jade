.signup-page
  .row
    .col-md-4.col-md-offset-4
      h1.text-center Welcome on TrackSeats.info!
  .row
    .col-md-4.col-md-offset-4
      form(name="signupForm", novalidate)
        .form-group(
          ng-class="signup.getValidationClass(signupForm.password)"
        )
          label.control-label(for="password") Please enter your password.
          input.form-control.input-lg(
            type="password"
            id="password"
            name="password"
            ng-model="passwordModel"
            minlength="10"
            required
          )
          .help-block(
            ng-messages="signupForm.password.$error"
            ng-show="signupForm.password.$dirty"
            role="alert"
          )
            div(ng-message="required") Please enter your password.
            div(ng-message="minlength") The password should be longer than 10 symbols.
        .form-group(
          ng-class="signup.getValidationClass(signupForm.confirmPassword)"
        )
          label.control-label(for="confirmPassword") Please confirm your password.
          input.form-control.input-lg(
            ts-validate-password-confirmation="passwordModel"
            type="password"
            id="confirmPassword"
            name="confirmPassword"
            ng-model="confirmPasswordModel"
            minlength="10"
            required
          )
          .help-block(
            ng-messages="signupForm.confirmPassword.$error"
            ng-show="signupForm.confirmPassword.$dirty"
            role="alert"
          )
            div(ng-message="required") Please confirm the password.
            div(ng-message="minlength") The password should be longer than 10 symbols.
            div(ng-message="confirmed") The field does not equal the password field.

        button.btn.btn-primary.btn-lg(
          type="submit"
          ng-click="signup.registration(passwordModel, confirmPasswordModel)"
          ng-disabled="signupForm.$invalid"
        ) Signup!
